mixin arow(doc)
  tr(class=doc.doctype, id=doc.guid)
    td= doc.label
    td= doc.fullpath
    td= doc.uwi
    td= doc.company
    td= doc.curves


.row-fluid#results
  table.table.table-condensed.table-bordered.table-hover
    th label
    th path
    th uwi
    th company
    th curves

    each doc in docs
      mixin arow(doc)
