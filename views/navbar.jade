nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .navbar-header
    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
      a.navbar-brand(href='/')
        img(src='images/big_logo.png', height='44px')

  .collapse.navbar-collapse.navbar-ex1-collapse
    ul.nav.navbar-nav
      li
        a.navbar-brand#logo(href='/')
          img(src='images/big_logo.png', height='44px')

      - if (hasEPF)
        li 
          a(href='/epf') E&P Files

      - if (hasDOX)
        li
          a(href='/dox') Documents

      - if (hasPET)
        li
          a(href='/pet') Petra

      - if (hasGGX) 
        li
          a(href='/ggx') Discovery

      - if (hasTKS)
        li
          a(href='/tks') Kingdom 


      li.spinner#workSpinner
        img(src='images/gray_boxes.gif')

      li.spinner#querySpinner
        img(src='images/orange_boxes.gif')

    
    form#search.navbar-form(role='search', action='/search', method='POST')

      .input-group.col-md-5.navbar-right

        .input-group-addon.white
          span.glyphicon.glyphicon-filter

        span.input-group-btn
          input#searchFilterInput.btn.btn-default.dropdown-toggle(type='dropdown', data-toggle='dropdown', value= searchFilters[0].show)
          ul.dropdown-menu#searchFilterList
            for f in searchFilters
              li
                a(value = f.show, idx= f.value)= f.show

        input.hidden#idx(name='idx', type='search', value=searchFilters[0].value)

        input.form-control#searchText(name='query', type='search', placeholder='Search')
        .input-group-btn
          button.btn.btn-default
            span.glyphicon.glyphicon-search




